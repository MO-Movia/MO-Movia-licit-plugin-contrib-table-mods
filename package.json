{
  "name": "@modusoperandi/licit-table-mods",
  "version": "1.0.0",
  "type": "module",
  "subversion": "1",
  "description": "Table extension plugin built with ProseMirror",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bundleDependencies": [],
  "scripts": {
    "clean": "rm -rf dist/ bin/ && rm -f modusoperandi-licit-table-mods-*.*.*.tgz",
    "lint:ts": "eslint src --ext .ts,.tsx --fix",
    "lint:css": "echo 'no CSS files available'",
    "lint": "npm run lint:css & npm run lint:ts",
    "ci:build": "tsc --build && copyfiles --up 1 \"src/**/*.css\" dist  && copyfiles package.json dist",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test": "jest --coverage",
    "debug": "node --debug-brk --inspect ./node_modules/.bin/jest -i",
    "ci:bom": "cyclonedx-npm --ignore-npm-errors --short-PURLs --output-format XML --output-file dist/bom.xml",
    "publish:dist": "npm publish"
  },
  "peerDependencies": {
    "prosemirror-model": "^1.0.0",
    "prosemirror-state": "^1.0.0"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^1.11.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "copyfiles": "^2.4.1",
    "enzyme": "^3.11.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.33.2",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.0",
    "jest-json": "^2.0.0",
    "jest-junit": "^16.0.0",
    "jest-prosemirror": "^2.1.5",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "style-loader": "^3.3.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^3.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "url": "^0.11.0"
  },
  "overrides": {
    "semver": "^7.5.2"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module-grouping"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix"
    ],
    "!(*test|*.setup).ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}